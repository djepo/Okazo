            <script type="text/javascript" src="{{asset('bundles/okazomain/js/okazo.js')}}"></script>
            
            <!-- Bootstrap -->
            <script src="{{asset('bundles/okazomain/bootstrap/js/bootstrap.js')}}"></script>
            
